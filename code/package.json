{
  "name": "lastation",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc-watch": "tsc -watch",
    "clean": "rimraf dist",
    "nodemon": "nodemon ./dist/app.js",
    "nodemon-dev": "nodemon --inspect ./dist/app.js",
    "build": "tsc && parcel build src.front/index.html -d public --public-url ./",
    "dev": "npm run clean && npm run build  && concurrently -r \"npm run tsc-watch\" \"npm run nodemon-dev\" \"parcel watch --out-dir ./public --public-url ./ src.front/index.html\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^8.0.47",
    "@types/node-static": "^0.7.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.0",
    "node-static": "^0.7.10",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "typescript": "^2.5.3"
  },
  "nodemonConfig": {
    "delay": "500",
    "watch": [
      "dist/**/*"
    ],
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "public"
    ],
    "ext": "js json"
  },
  "devDependencies": {
    "babel-core": "^6.26.0"
  }
}
