@import "./reset.css"

body
  background-color: aliceblue

h1
  font-weight: normal
  text-align: center
  font-size: 32px
  margin-top: 16px
  color: #222

#video-ctnr,
#log-ctnr,
#input-ctnr
  background-color: #66ccff
  max-width: 640px
  width: 80%
  min-width: 320px
  margin: 48px auto 0 auto
  display: block

.intro-text
  color: #999
  font-size: 16px
  margin-top: 8px
  text-align: center

#log-ctnr
  height: 300px
  background-color: black
  color: white
  padding: 8px
  overflow-y: auto

  .log-time
    opacity: .4

  p.log-item
    margin: 0 0 6px 0
    word-break: break-all

#input-ctnr
  background-color: transparent
  text-align: center

  >*
    vertical-align middle